        font-size: 13px;
        display: inline-block;
        padding: 3px 14px;
        margin: 4px 2px !important;
    }

    .btnF{
        width: fit-content;
            position: relative;
            bottom: 1rem;
            opacity: 1;
            border-radius: 200px;
            padding: 1rem;
    }
    .btnF span{
                font-size: 15px;
                display: flex;
                gap: 5px;
                align-items: center;
    }
    .our-brands{
        display:flex;justify-content:space-around;align-items:flex-end
    }
    #query_for .form-control{
        width:fit-content;
    }

    #issue_body {
        max-height:550px; overflow:auto;
    }
    #issue_body h5{
    color: rgb(253, 93, 117);
    }
    .w-1{
        width:4rem;
    }
    .w-2{
        width:4rem;
    }
    .bold-head{
        font-weight: bold; color: rgb(253, 93, 117);
    }
    .color-head{
        color: rgb(253, 93, 117);
    }
    .imgDesc{
        width:100%;text-align:center;display:block;margin-top:.5rem
    }

    .widget-title{
        text-align:left !important;
    }
    .imgDesc p {
        margin:auto;width:75%;text-align:center;font-weight:700;font-style:italic;font-size:.8rem
    }
    body {
    height: fit-content;
    }

    .inner img{
        height: 56px;
    }
        .post-content p,span {
            text-align:justify
        }
        .author {
        width: 40px;
        padding: 5px 0px;
        height: 38px;
        border: 1px solid rgb(224, 224, 224);
        background: #fff;
        border-radius: 50%;
    }
        .chatbox .form-control {
            padding: 4px 16px;
        }
        #sandy a {
            color:#4f58fe;
        }
        .social-icons a {
        font-size: 13px;
        }

        .post .post-format {
        padding-top: 13px;

        }
        * {
            text-align: left;
        }
        .widget-title {
            text-align: center  !important;
        }
        .burger-menu {
            display: none !important;
            }
        @media only screen and (max-width: 600px) {
            .burger-menu {
            display: inherit !important;
            }
